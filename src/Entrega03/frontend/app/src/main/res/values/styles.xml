<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="colorSurface">@color/gray_very_dark</item>
        <item name="colorOnSurface">@color/white_fff</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.Dialog.Neutral</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/white_fff</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="Widget.App.Button.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/uber_blue</item>
    </style>

    <style name="Widget.App.Button.Dialog.Neutral" parent="Widget.Material3.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/gray_medium</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/uber_blue</item>
        <item name="android:progressBackgroundTint">@color/gray_medium</item>
        <item name="android:secondaryProgressTint">@color/uber_blue_dark</item>
        <item name="colorControlNormal">@color/gray_medium</item>
        <item name="colorControlActivated">@color/uber_blue</item>
    </style>

    <style name="Profile.ButtonAsActionItem" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_fff</item> <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/selector_profile_list_item</item> <item name="android:gravity">center_vertical|start</item> <item name="iconPadding">16dp</item>
        <item name="iconTint">@color/gray_light</item> <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item> <item name="cornerRadius">0dp</item> </style>

    <style name="Profile.ButtonAsActionItem.Destructive" parent="Profile.ButtonAsActionItem">
        <item name="android:textColor">@color/status_error</item>
        <item name="iconTint">@color/status_error</item>
    </style>

    <style name="Profile.ButtonAsActionItem.Accent" parent="Profile.ButtonAsActionItem">
        <item name="android:textColor">@color/uber_blue</item>
        <item name="iconTint">@color/uber_blue</item>
    </style>

    <style name="Profile.Button.EditHeader" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="strokeColor">@color/gray_medium</item> <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="iconTint">@color/gray_light</item>
        <item name="cornerRadius">18dp</item> </style>

</resources>
